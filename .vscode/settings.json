{
    "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.formatOnSave": true
  },

  "files.associations": {
    "*.html": "django-html",
    "*.py": "python",
    "**/templates/**/*.html": "django-html",
  },

  "[django-html]": {
    "editor.quickSuggestions": {
      "other": true,
      "comments": false,
      "strings": true
    }
  },

  "emmet.includeLanguages": {
    "django-html": "html"
  }

}